#!/bin/sh

# no actions if iopsys database is present
[ -d /lib/db ] && exit 0

[ -d "/etc/board.d/" -a ! -f "/etc/board.json" ] && {
	for a in `ls /etc/board.d/*`; do
		[ -x $a ] || continue;
		$(. $a)
	done
}

[ -f "/etc/board.json" ] || return 1
[ -f "/etc/config/network" ] || {
	touch /etc/config/network
	/bin/config_generate
}
